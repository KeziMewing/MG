-- Auto Rejoin Script for Roblox Private Servers

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")

-- Function to rejoin the game
local function rejoinGame()
    local player = Players.LocalPlayer
    local placeId = game.PlaceId

    -- Get the private server code
    local privateServerId = game.PrivateServerId

    while true do
        wait(5) -- Wait before trying to rejoin
        print("Rejoining game...")

        -- Check if the private server ID is valid
        if privateServerId ~= "" then
            TeleportService:Teleport(placeId, player, {privateServerId}) -- Use the private server ID to rejoin
            print("Using private server ID: " .. privateServerId)
        else
            print("No private server ID found. Cannot rejoin.")
            break
        end
    end
end

-- Start the rejoin function
rejoinGame()
